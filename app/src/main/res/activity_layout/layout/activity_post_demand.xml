<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:id="@+id/ll_infom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginStart="15dp"
            android:text="1.物品买卖，包括实物（吹风机）和虚拟物品（学习资料）" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shiwu"
                style="@style/style_layout_post_tv"
                android:layout_marginStart="15dp"
                android:text="实物" />


            <TextView
                android:id="@+id/tv_xuni"
                style="@style/style_layout_post_tv"
                android:layout_marginStart="15dp"
                android:text="虚拟" />

        </LinearLayout>


        <TextView
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="2.出租，如假期出租房、求租一辆小毛驴" />


        <TextView
            android:id="@+id/tv_chuzu"
            style="@style/style_layout_post_tv"
            android:layout_marginStart="15dp"
            android:text="出租" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_3"
                style="@style/style_layout_main_item_tv_gray"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="3.拼车/包车,去机场" />

            <TextView
                android:id="@+id/tv_baoche"
                style="@style/style_layout_post_tv"
                android:layout_below="@+id/tv_3"
                android:layout_marginStart="15dp"
                android:text="拼/包车" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/tv_3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_4"
                    style="@style/style_layout_main_item_tv_gray"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="4.勤工俭学，假期打工赚生活费" />

                <TextView
                    android:id="@+id/tv_qgjx"
                    style="@style/style_layout_post_tv"
                    android:layout_marginStart="15dp"
                    android:text="勤工俭学" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_5"
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="5.快递代取、给学妹装系统" />

        <TextView
            android:id="@+id/tv_qita"
            style="@style/style_layout_post_tv"
            android:layout_marginStart="15dp"
            android:text="其他" />


        <TextView
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="发布类型（供求）：\n1.售卖，提供，如买卖二手物品，出租闲置电动车等等。\n2.我想要的需求，如想买个二手吹风机、放假求拼车去车站等。" />


    </LinearLayout>


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_infom"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_fb_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="提供需求"
            android:textColor="@color/color_ffffff" />

        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/selector_fb_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="想要需求"
            android:textColor="@color/color_ffffff" />
    </RadioGroup>


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_post_next"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="下一步"
        android:textColor="@color/color_ffffff" />

</RelativeLayout>