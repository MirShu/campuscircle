<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_layout_main_item_linearLayout">

    <LinearLayout style="@style/style_layout_main_item_ll">

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_user_head"
                style="@style/style_layout_main_item_user_head" />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/style_layout_main_item_user_name"
                android:layout_toEndOf="@+id/iv_user_head"
                android:text="哈利路亚" />


            <TextView
                android:id="@+id/tv_user_name_time"
                style="@style/style_layout_main_item_tv_gray"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iv_user_head"
                android:text="2021.08.10" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_fx"
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginTop="15dp"
            android:text="线路方向" />

        <TextView
            android:id="@+id/tv_route"
            style="@style/style_layout_main_item_goods_name"
            tools:text="学校  ->  机场方向" />


        <TextView
            android:id="@+id/tv_time"
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginTop="15dp"
            android:text="出发时间：" />

        <TextView
            android:id="@+id/tv_work_start_time"
            style="@style/style_layout_main_item_goods_name"
            android:text="2021.08.15 16：35" />


        <TextView
            android:id="@+id/tv_pop_num"
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginTop="15dp"
            android:text="剩余座位" />


        <TextView
            android:id="@+id/tv_lastsite"
            style="@style/style_layout_main_item_goods_name" />

        <TextView
            android:id="@+id/tv_short"
            style="@style/style_layout_main_item_tv_gray"
            android:layout_marginTop="15dp"
            android:text="校门口集合，准时出发，不等人的哦" />
    </LinearLayout>

</LinearLayout>