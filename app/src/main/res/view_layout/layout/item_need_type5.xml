<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_list_itme"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_user_head"
            style="@style/style_layout_main_item_user_head" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/style_layout_main_item_user_name"
            android:layout_toEndOf="@+id/iv_user_head"
            android:text="哈利路亚" />


        <TextView
            android:id="@+id/tv_user_name_time"
            style="@style/style_layout_main_item_tv_gray"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/iv_user_head"
            android:text="2021.08.10" />

    </RelativeLayout>

    <TextView
        style="@style/style_layout_main_item_goods_name"
        android:layout_marginTop="15dp"
        android:text="全新无拆，买来没用，有点小，适合女生" />


    <TextView
        style="@style/style_layout_main_item_tv_gray"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/iv_user_head"
        android:text="想要的需求：" />


    <TextView
        style="@style/style_layout_main_item_goods_name"
        android:layout_marginTop="5dp"
        android:text="代取快递，代码生活用品" />

    <TextView
        style="@style/style_layout_main_item_tv_gray"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/iv_user_head"
        android:text="愿支付报酬：" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="8.0"
        android:textColor="@color/color_ff4342"
        android:textSize="14sp" />
</LinearLayout>