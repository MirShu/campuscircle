<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_layout_main_item_linearLayout">

    <LinearLayout
        style="@style/style_layout_main_item_ll"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/headline_img"
            android:layout_width="121dp"
            android:layout_height="204dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_shiwu"
            app:riv_corner_radius="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_user_head"
                    style="@style/style_layout_main_item_user_head" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/style_layout_main_item_user_name"
                    android:layout_toEndOf="@+id/iv_user_head"
                    android:text="哈利路亚" />


                <TextView
                    android:id="@+id/tv_user_name_time"
                    style="@style/style_layout_main_item_tv_gray"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/iv_user_head"
                    android:text="2021.08.10" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_goods_name"
                style="@style/style_layout_main_item_goods_name"
                android:layout_marginTop="10dp"
                android:text="艾玛电动车" />


            <TextView
                style="@style/style_layout_main_item_tv_gray"
                android:layout_marginTop="10dp"
                android:text="出租时间：" />


            <TextView
                android:id="@+id/tv_work_start_time"
                style="@style/style_layout_main_item_goods_name"
                tools:text="2021.07.10~2021.08.16" />


            <TextView
                style="@style/style_layout_main_item_tv_gray"
                android:layout_marginTop="10dp"
                android:text="期望租金：" />


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff4342"
                android:textSize="14sp"
                tools:text="299.0" />


            <TextView
                style="@style/style_layout_main_item_tv_gray"
                android:layout_marginTop="10dp"
                android:text="其他说明：" />

            <TextView
                android:id="@+id/tv_short"
                style="@style/style_layout_main_item_tv_gray"
                tools:text="暑假回家，电动车出租，仅限女生，要爱惜车，损坏需要陪" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>