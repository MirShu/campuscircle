<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/style_layout_main_item_linearLayout">

    <LinearLayout
        style="@style/style_layout_main_item_ll"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/headline_img"
            android:layout_width="105dp"
            android:layout_height="114dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_shiwu"
            app:riv_corner_radius="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_user_head"
                    style="@style/style_layout_main_item_user_head" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/style_layout_main_item_user_name"
                    android:layout_toEndOf="@+id/iv_user_head"
                    android:text="哈利路亚" />

                <TextView
                    android:id="@+id/tv_user_name_time"
                    style="@style/style_layout_main_item_tv_gray"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/iv_user_head"
                    android:text="2021.08.10" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_goods_name"
                style="@style/style_layout_main_item_goods_name"
                android:layout_below="@+id/rl_user"
                android:layout_marginTop="8dp"
                android:text="戴森吹风机" />


            <TextView
                android:id="@+id/tv_goods_sum"
                style="@style/style_layout_main_item_tv_gray"
                android:layout_below="@+id/tv_goods_name"
                android:text="全新无拆，买来没用，有点小，适合女生" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_sum"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_user"
                    android:text="299.0"
                    android:textColor="@color/color_ff4342"
                    android:textSize="14sp" />


                <TextView
                    style="@style/style_layout_main_item_tv_gray"
                    android:layout_marginStart="5dp"
                    android:text="（快联系TA砍价）" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>