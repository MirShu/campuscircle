<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_main"
    android:orientation="vertical">


    <com.campuscircle.app.widget.RollScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_403b58"
                    android:textSize="18sp"
                    tools:text="昵称" />


                <LinearLayout
                    android:id="@+id/ll_xuexiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nick"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_user_name_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校：" />

                    <TextView
                        android:id="@+id/tv_university"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_403b58"
                        android:textSize="16sp"
                        tools:text="云南大学" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_xuexiao"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分：" />

                    <TextView
                        android:id="@+id/tv_reward_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_403b58"
                        android:textSize="16sp"
                        tools:text="00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（发布需求消耗，签到看广告增加积分）" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_jifen"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_me_small_butt"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="编辑"
                        android:textColor="@color/color_403b58" />

                    <TextView
                        android:id="@+id/tv_customer_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/shape_me_small_butt"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="每日签到"
                        android:textColor="@color/color_403b58" />


                </LinearLayout>


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_head"
                    app:riv_oval="true" />

            </RelativeLayout>


            <com.rey.material.widget.RelativeLayout
                android:id="@+id/rl_hhr"
                style="@style/Material.Drawable.Ripple.Wave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/color_ffffff"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp">


                <ImageView
                    android:id="@+id/im_zhaom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_zhaomu" />


                <TextView
                    android:id="@+id/tv_zhaom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/im_zhaom"
                    android:text="校园管理合伙人招募"
                    android:textColor="@color/color_424242"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_zhaom"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/im_zhaom"
                    android:text="像群主一样管理维护平台内容，有薪资报酬"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_go" />

            </com.rey.material.widget.RelativeLayout>

            <View style="@style/style_me_line" />

            <com.rey.material.widget.TextView
                android:id="@+id/tv_lx"
                style="@style/style_me_tv"
                android:drawableStart="@mipmap/icon_lianxi"
                android:drawableEnd="@mipmap/icon_go"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="联系方式" />


            <View style="@style/style_me_line" />

            <com.rey.material.widget.TextView
                android:id="@+id/tv_sc"
                style="@style/style_me_tv"
                android:drawableStart="@mipmap/icon_shoucang"
                android:drawableEnd="@mipmap/icon_go"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="我的收藏" />

            <View style="@style/style_me_line" />


            <com.rey.material.widget.TextView
                android:id="@+id/tv_sm"
                style="@style/style_me_tv"
                android:drawableStart="@mipmap/icon_mianze"
                android:drawableEnd="@mipmap/icon_go"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="免责声明" />

            <View style="@style/style_me_line" />

            <com.rey.material.widget.TextView
                android:id="@+id/tv_yj"
                style="@style/style_me_tv"
                android:drawableStart="@mipmap/icon_fankui"
                android:drawableEnd="@mipmap/icon_go"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="意见反馈" />

            <View style="@style/style_me_line" />

            <com.rey.material.widget.TextView
                android:id="@+id/tv_gy"
                style="@style/style_me_tv"
                android:drawableStart="@mipmap/icon_guanyu"
                android:drawableEnd="@mipmap/icon_go"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="关于我们" />


            <TextView
                android:id="@+id/tv_versionname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@color/color_999999" />

        </LinearLayout>


    </com.campuscircle.app.widget.RollScrollView>
</LinearLayout>